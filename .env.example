# ============================================
# Assignment Calendar Sync Configuration
# ============================================
# Copy this file to .env and fill in your values

# --------------------------------------------
# Google Calendar API Credentials (REQUIRED)
# --------------------------------------------
# Get these from https://console.cloud.google.com/
# 1. Create a project or select existing
# 2. Enable Google Calendar API
# 3. Create credentials (OAuth 2.0 Client ID)
# 4. Copy Client ID and Client Secret
GOOGLE_CLIENT_ID=your_client_id_here
GOOGLE_CLIENT_SECRET=your_client_secret_here

# Calendar to sync to (use 'primary' for main calendar)
GOOGLE_CALENDAR_ID=primary

# --------------------------------------------
# Gradescope Login
# --------------------------------------------
# Option 1: Direct login with email/password
GRADESCOPE_EMAIL=your_email@university.edu
GRADESCOPE_PASSWORD=your_password

# Option 2: Use SSO (School Credentials)
# Set to true to use SSO login instead of email/password
# You'll be prompted to complete login in browser
GRADESCOPE_USE_SSO=false

# --------------------------------------------
# Application Settings
# --------------------------------------------
# Run browser in headless mode (true/false)
HEADLESS_BROWSER=true

# How many days ahead to sync assignments
# Default: 30 (sync assignments due in next 30 days)
SYNC_DAYS_AHEAD=30

# Minutes before assignment due date to set reminder
# Default: 60 (remind 1 hour before due)
DEFAULT_REMINDER_MINUTES=60

# --------------------------------------------
# Advanced Settings (OPTIONAL)
# --------------------------------------------
# Enable debug output (true/false)
DEBUG_MODE=false

# Default to dry run mode (true/false)
DRY_RUN_DEFAULT=false

# Timezone for calendar events
# Default: America/New_York
# Other examples: America/Los_Angeles, Europe/London, Asia/Tokyo
TIMEZONE=America/New_York

# Path to chromedriver executable (optional)
# Leave blank to use chromedriver from PATH
CHROMEDRIVER_PATH=

# Custom file paths (optional)
# TOKEN_FILE=token.json
# CREDENTIALS_FILE=credentials.json