# ============================================
# Environment Configuration Template
# Copy this to .env and fill in your values
# ============================================

# ============ DATABASE ============
# Local: postgresql+asyncpg://user:password@localhost:5432/college_assistant
# Railway: Copy from PostgreSQL service â†’ Connect tab
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/college_assistant
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# ============ API CONFIGURATION ============
API_V1_PREFIX=/api/v1
PROJECT_NAME="College Assistant - Auto-Prep Job Applications"
VERSION=1.0.0
DEBUG=False

# CORS - Mobile app origins
# Development: ["http://localhost:19006", "http://localhost:19000"]
# Production: ["*"] or your domain
ALLOWED_ORIGINS=["*"]

# ============ SECURITY ============
# IMPORTANT: Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-SECRET-KEY-BEFORE-DEPLOYING
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# ============ AI SERVICES ============
# OpenAI (REQUIRED for cover letter generation)
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic (optional, for future features)
ANTHROPIC_API_KEY=your-anthropic-key-optional

# ============ BACKGROUND JOBS ============
# Enable Auto-Prep job scheduler
ENABLE_BACKGROUND_JOBS=True

# Daily job search schedule (24-hour format)
JOB_SEARCH_HOUR=8
JOB_SEARCH_MINUTE=0

# ============ OPTIONAL SERVICES ============
# Google Calendar/Email (for assignment sync - optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/api/v1/auth/google/callback

# Redis Cache (optional, for performance)
REDIS_URL=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# ============ RAILWAY DEPLOYMENT ============
# Railway will auto-set these:
# - PORT (Railway assigns dynamically)
# - RAILWAY_STATIC_URL (your app's URL)
# - RAILWAY_ENVIRONMENT (production/staging)

# You only need to manually set in Railway dashboard:
# 1. DATABASE_URL (copy from PostgreSQL service)
# 2. SECRET_KEY (generate new one)
# 3. OPENAI_API_KEY (from OpenAI)
# Everything else can use defaults above
