{
  "name": "assignment-calendar-sync",
  "version": "1.0.0",
  "description": "Simple desktop app to sync assignments from Canvas and Gradescope to any calendar app",
  "main": "electron/main.js",
  "homepage": "./",
  "author": "Assignment Calendar Sync",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "ELECTRON_IS_DEV=1 electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:all": "electron-builder --mac --win --linux",
    "pack": "electron-builder --dir",
    "dist": "npm run build"
  },
  "build": {
    "appId": "com.assignmentcalendarsync.app",
    "productName": "Assignment Calendar Sync",
    "copyright": "Copyright Â© 2024 Assignment Calendar Sync",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "electron/**/*",
      "renderer/**/*",
      "python/**/*",
      "requirements.txt",
      "!python/__pycache__",
      "!python/logs",
      "!python/.env",
      "!python/token.json"
    ],
    "extraResources": [
      {
        "from": "python",
        "to": "python",
        "filter": ["**/*", "!__pycache__", "!logs", "!.env", "!token.json"]
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {}
}